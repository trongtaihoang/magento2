			'jquery',
			'mgsowlcarousel'
		], function(jQuery){
			(function($) {
				<?php if($fullheight && ($this->getItems()==1)): ?>
                    var windowHeight = $(window).height();
					var offsetSlider = $('#page-header-sliders').offset();
					var sliderHeight = windowHeight - offsetSlider.top;
