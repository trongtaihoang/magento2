			<div class="icon-wrapper">
				<span class="<?php echo $builderHelper->decodeHtmlTag($iconClass) ?>"></span>
			</div>
		<?php endif ?>
		<?php if($title!='' || $description!=''): ?>
			<div class="content-wrapper">
				<?php if($title!=''): ?>
					<h4><?php echo $builderHelper->decodeHtmlTag($title) ?></h4>
				<?php endif ?>
				<?php if($description!=''): ?>
					<div class="content"><?php echo $builderHelper->decodeHtmlTag($description) ?></div>
				<?php endif ?>
			</div>
		<?php endif ?>
	</div>
</div>