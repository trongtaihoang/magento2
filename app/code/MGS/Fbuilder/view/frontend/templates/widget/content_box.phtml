<?php $builderHelper = $this->helper('MGS\Fbuilder\Helper\Data'); ?>
<?php $iconClass = $this->getFbuilderIcon(); ?>
<?php $title = $this->getFbuilderSubtitle(); ?>
<?php $description = $this->getFbuilderTextContent(); ?>
